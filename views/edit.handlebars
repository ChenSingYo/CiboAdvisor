<div class="container">
  <div class="row">
    <h1 class="restaurant-show-title">Editing: {{restaurant.name_en}}</h1>
    <div class="col-8 offset-2 mb-5">
      <form method="POST" action="/restaurants/{{restaurant._id}}?_method=PUT" class="">
        <div class="row">
          <div class="col-md-5 form-group mb-3">
            <label class="text-muted font-weight-light">餐廳名稱</label>
            <input class="form-control" type="text" name="name" id="name" placeholder="" value="{{restaurant.name}}" required>
          </div>
          <div class="col-md-4 form-group mb-3">
            <label for="restaurant-name_en" class="text-muted font-weight-light">Name</label>
            <input class="form-control" type="text" name="name_en" id="restaurant-name_en" placeholder="" value="{{restaurant.name_en}}" required>
          </div>
          <div class="col-md-3 form-group mb-3">
            <label for="restaurant-category" class="text-muted font-weight-light">Category</label>
            <div>
              <select class="form-control" id="restaurant-category" name="category" id="restaurant-category" required>
                <option value="中式料理" {{#is restaurant.category "中式料理"}} selected {{/is}}>中式料理</option>
                <option value="台灣小吃" {{#is restaurant.category "台灣小吃"}} selected {{/is}}>台灣小吃</option>
                <option value="東南亞料理" {{#is restaurant.category "東南亞料理"}} selected {{/is}}>東南亞料理</option>
                <option value="中東料理" {{#is restaurant.category "中東料理"}} selected {{/is}}>中東料理</option>
                <option value="日韓料理" {{#is restaurant.category "日韓料理"}} selected {{/is}}>日韓料理</option>
                <option value="歐式餐廳" {{#is restaurant.category "歐式餐廳"}} selected {{/is}}>歐式餐廳</option>
                <option value="美式餐廳" {{#is restaurant.category "美式餐廳"}} selected {{/is}}>美式餐廳</option>
                <option value="蔬食餐廳" {{#is restaurant.category "蔬食餐廳"}} selected {{/is}}>蔬食餐廳</option>
                <option value="早午餐" {{#is restaurant.category "早午餐"}} selected {{/is}}>早午餐</option>
                <option value="咖啡廳" {{#is restaurant.category "咖啡廳"}} selected {{/is}}>咖啡廳</option>
                <option value="酒吧" {{#is restaurant.category "酒吧"}} selected {{/is}}>酒吧</option>
                <option value="其他" {{#is restaurant.category "其他"}} selected {{/is}}>其他</option>
              </select>
            </div>
          </div>
          <div class="col-md-6 form-group mb-3">
            <label for="restaurant-address" class="text-muted font-weight-light">Address</label>
            <input class="form-control" type="text" name="location" id="restaurant-address" placeholder="" value="{{restaurant.location}}" required>
          </div>
          <div class="col-md-4 form-group mb-3">
            <label for="restaurant-phone" class="text-muted font-weight-light">Phone</label>
            <input class="form-control" type="tel" name="phone" id="restaurant-phone" placeholder="" value="{{restaurant.phone}}" required>
          </div>
          <div class="col-md-2 form-group mb-3">
            <label class="text-muted font-weight-light">Rating</label>
            <input class="form-control" type="number" step="0.1" min="0" max="5" name="rating" placeholder="" value="{{restaurant.rating}}" required>
          </div>        
          <div class="col-md-12 form-group mb-3" >
            <label for="restaurant-about" class="text-muted font-weight-light">About</label>
            <textarea class="form-control" rows="5" name="description" id="restaurant-about" placeholder="" required>{{restaurant.description}}</textarea>
          </div>   
          <div class="col-md-12 form-group mb-3">
            <label for="restaurant-Image_Url" class="text-muted font-weight-light">Image Url</label>
            <input class="form-control" type="url" name="image" id="restaurant-Image_Url" placeholder="" value="{{restaurant.image}}" required>
          </div>
          <div class="col-md-12 form-group mb-4">
            <label for="restaurant-google_map" class="text-muted font-weight-light">Google Map Url</label>
            <input class="form-control" type="url" name="google_map" id="restaurant-google_map" placeholder="" value="{{restaurant.google_map}}" required>
          </div>
          <div class="col-md-2 form-group mb-5 d-flex justify-content-between">
            <a href="/restaurants/{{restaurant._id}}" type="button" class="btn btn-outline-secondary">BACK</a>
          </div>     
          <div class="col-md-1 form-group mb-5 d-flex justify-content-end">
            <button type="submit" class="btn btn-outline-success">SAVE</button>
          </div>          
        </div>
      </form>
    </div>
  </div>
</div>
