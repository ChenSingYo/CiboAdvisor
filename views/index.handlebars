
<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="想吃什麼？" aria-label=""
            value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search fa-2x text-muted"></i></button>
          </div>
        </div>
      </form>
      <a href="/restaurants/new" id="create-btn" class="btn mb-3 text-danger" aria-pressed="true">Got new spot? Fuiyoh! Just come to add it here :D</a>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    {{#each restaurants}}
    <div class="col-sm-6 col-md-4 col-12 mx-auto">
      <div class="card-columns">
        <div class="card mb-3">
          <a href="/restaurants/{{this._id}}" class="text-secondary"> 
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
          <div class="card-body p-3">
            <h6 class="card-title text-dark mb-1">{{this.name}}</h6>
            <div class="restaurant-category mb-1">
              <i class="fas fa-utensils pr-2"></i> {{this.category}}
            </div>
            <span class="tag">
              {{this.rating}}
              <i class="fas fa-star"></i>
            </span>
            <div class="row d-flex justify-content-end">
              <button type="button" class="btn col-2" data-toggle="modal" data-target="#deleteModal-{{this._id}}"><i class="fas fa-trash-alt fa-lg text-muted"></i></button>
            </div>
          </div>
          </a>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>

<!-- Delete Modal -->
{{#each restaurants}}
<div class="modal fade" id="deleteModal-{{this._id}}" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <big class="modal-body">
        Delete <strong>{{this.name_en}} / {{this.name}}</strong>？
      </big>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
        <form action="/restaurants/{{this._id}}/delete" method="POST">
          <button type="submit" class="btn btn-danger">Sure</button>
        </form>
      </div>
    </div>
  </div>
</div>
{{/each}}
