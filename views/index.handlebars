
<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h6 class="mb-2">Find Cibo</h6>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="想吃什麼？" aria-label=""
            value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    {{#each restaurants}}
    <div class="col-sm-6 col-md-4 col-12 mx-auto">
      <div class="card-columns">
        <a href="/restaurants/{{this.id}}" class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
            <div class="card-body p-3">
              <h6 class="card-title text-dark mb-1">{{this.name}}</h6>
              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>
              <span class="tag">
                {{this.rating}}
                <i class="fas fa-star"></i>
              </span>
            </div>
          </div>
        </a>
      </div>
    </div>
    {{/each}}
  </div>
</div>