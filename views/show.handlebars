<h1 class="mb-1 restaurant-show-title">{{restaurant.name_en}}</h1>
<div class="container">
  <div class="row">
    <div class="col-4 col-md-5 offset-1 mr-3">
      <h2 class="mb1 font-weight-bold">{{restaurant.name}}</h2>
      <p class="mb-5">
        {{restaurant.description}}
      </p>
      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
        </span>
        &ensp;{{restaurant.category}}
      </p>
      <p class="mb-1">
        <a href="{{restaurant.google_map}}" class="text-secondary text-decoration-none" target="_blank">
        <i class="fas fa-location-arrow pr-2 fa-1x"></i>&ensp;{{restaurant.location}}
        </a>
      </p>
      <p class="mb-5">
        <span class="text-secondary">
          <i class="fas fa-phone"></i>
        </span>
        &ensp;{{restaurant.phone}}
      </p>
      <div class="d-inline-flex mt-5 mb-3">
        <a href="/restaurants/{{restaurant._id}}/edit" class="btn btn-success btn-sm mx-1" role="button"><i class="fas fa-edit fa-lg"></i></a>
        <button type="button" class="btn btn-sm btn-secondary mx-1" data-toggle="modal" data-target="#deleteModal-{{restaurant._id}}"><i class="fas fa-trash-alt fa-lg"></i></button>
        <a href="/" type="button" class="btn btn-primary btn-sm mx-1"><i class="fas fa-home fa-lg"></i></a>
      </div>
    </div>
    <div class="col-8 col-md-6 mb-5">
      <img class="rounded shadow ml-3"
        src="{{restaurant.image}}" alt="{{restaurant.name_en}}"
        style="max-width: 500px;">
    </div>
  </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal-{{restaurant._id}}" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <big class="modal-body">
        Delete <strong>{{restaurant.name_en}}</strong> ï¼Ÿ
      </big>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
        <form action="/restaurants/{{restaurant._id}}?_method=DELETE" method="POST">
          <button type="submit" class="btn btn-danger">Sure</button>
        </form>
      </div>
    </div>
  </div>
</div>