
<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h6 class="mb-2">Find Cibo</h6>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="想吃什麼？" aria-label=""
            value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!--notFound -->
<div class="container mb-5 mt-2" style="height: 300px;">
  <div class="row justify-content-center">
    <div class="mt-5 notfound text-center">
      <i class="fas fa-6x text-danger mb-3"></i>
      <h3>we're sorry</h3>
      <h3>but " <b class="text-danger">{{keyword}}</b> " is not found here</h3>
      <h5>Recommend using the name of restaurant, location or type of food as keyword</h5>
    </div>
  </div>
</div>